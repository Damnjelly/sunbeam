{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "extensions"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "extensions": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "type",
                    "origin",
                    "title",
                    "description",
                    "author"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "The type of extension.",
                        "enum": [
                            "github-release",
                            "github-repository",
                            "github-gist",
                            "script",
                            "api"
                        ]
                    },
                    "title": {
                        "type": "string",
                        "description": "Human readable title of the extension."
                    },
                    "description": {
                        "type": "string",
                        "description": "Short text describing what the extension does."
                    },
                    "origin": {
                        "type": "string",
                        "description": "The origin of the extension. This can be a github repository, a gist, a git repository, a val or a url to a script / api."
                    },
                    "author": {
                        "type": "string",
                        "description": "The author github username."
                    },
                    "platforms": {
                        "type": "array",
                        "description": "The platforms the extension is compatible with. If not specified, the extension is compatible with all platforms.",
                        "items": {
                            "type": "string",
                            "enum": [
                                "macos",
                                "linux",
                                "windows"
                            ]
                        }
                    }
                }
            }
        }
    }
}
