{
    "name": "sunbeam-types",
    "version": "0.4.1",
    "description": "Types for sunbeam",
    "homepage": "https://pomdtr.github.io/sunbeam",
    "repository": {
        "url": "https://github.com/pomdtr/sunbeam"
    },
    "types": "./index.d.ts",
    "scripts": {
        "refresh-types": "json2ts -i ../../schemas/page.schema.json -o index.d.ts",
        "generate-docs": "typescript-documentation --entry ./index.d.ts --output ../../docs/types.md",
        "build": "npm run refresh-types && npm run generate-docs"
    },
    "devDependencies": {
        "json-schema-to-typescript": "^12.0.0",
        "typescript-documentation": "^3.0.2"
    }
}
