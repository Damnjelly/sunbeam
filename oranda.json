{
    "$schema": "https://github.com/axodotdev/oranda/releases/download/v0.5.0/oranda-config-schema.json",
    "project": {
        "name": "sunbeam",
        "description": "Generate complex TUIs from simple scripts written in any language.",
        "homepage": "https://pomdtr.github.io/sunbeam/",
        "repository": "https://github.com/pomdtr/sunbeam",
        "license": "MIT",
        "readme_path": "./README.md"
    },
    "marketing": {
        "social": {
            "twitter_account": "@pomdtr"
        }
    },
    "build": {
        "path_prefix": "sunbeam"
    },
    "styles": {
        "theme": "axodark"
    },
    "components": {
        "artifacts": {
            "package_managers": {
                "preferred": {
                    "brew": "brew install pomdtr/tap/sunbeam",
                    "go": "go install github.com/pomdtr/sunbeam@latest"
                }
            }
        },
        "mdbook": {
            "path": "./",
            "theme": true
        },
        "changelog": {
            "read_changelog_file": true
        }
    }
}
