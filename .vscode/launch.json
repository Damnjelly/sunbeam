{
    "configurations": [
        {
            "name": "Run app",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "preLaunchTask": "start sunbeam"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "ask",
                "${input:prompt}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "prompt",
            "type": "promptString",
            "description": "GPT4 Prompt",
        }
    ]
}
