{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "release",
      "type": "process",
      "command": "goreleaser",
      "args": [
        "release",
        "--skip=publish",
        "--skip=validate",
        "--clean"
      ],
      "problemMatcher": []
    },
    {
      "label": "build docs",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/website/frontend"
      },
    },
    {
      "label": "build typescript package",
      "type": "process",
      "command": "deno",
      "options": {
        "cwd": "${workspaceFolder}/pkg/typescript"
      },
      "args": [
        "run",
        "-A",
        "./build.ts"
      ],
      "problemMatcher": []
    }
  ],
}
