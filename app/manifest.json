{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "http://github.com/pomdtr/sunbeam/manifest",
    "type": "object",
    "required": [
        "name",
        "title",
        "version",
        "scripts"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]+$"
        },
        "postInstall": {
            "type": "string"
        },
        "requirements": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "homePage",
                    "which"
                ],
                "properties": {
                    "homePage": {
                        "type": "string"
                    },
                    "which": {
                        "type": "string"
                    }
                }
            }
        },
        "title": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "const": "1.0"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "preferences": {
            "type": "array"
        },
        "rootItems": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "script",
                    "title"
                ],
                "additionalProperties": false,
                "properties": {
                    "script": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "with": {
                        "type": "object",
                        "patternProperties": {
                            "^[a-zA-Z_][a-zA-Z0-9_]+$": {
                                "anyOf": [
                                    {
                                        "$ref": "#/$defs/input"
                                    },
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "boolean"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]+$": {
                    "$ref": "#/$defs/script"
                }
            },
            "not": {
                "anyOf": [
                    {
                        "required": [
                            "extension"
                        ]
                    },
                    {
                        "required": [
                            "query"
                        ]
                    },
                    {
                        "required": [
                            "completion"
                        ]
                    },
                    {
                        "required": [
                            "help"
                        ]
                    }
                ]
            }
        }
    },
    "$defs": {
        "script": {
            "type": "object",
            "required": [
                "command",
                "output"
            ],
            "additionalProperties": false,
            "properties": {
                "output": {
                    "type": "string",
                    "enum": [
                        "page",
                        "clipboard",
                        "browser",
                        "stdout"
                    ]
                },
                "command": {
                    "type": "string"
                },
                "cwd": {
                    "type": "string",
                    "enum": [
                        "currentDir",
                        "extensionDir",
                        "homeDir"
                    ],
                    "default": "extensionDir"
                },
                "page": {
                    "type": "object"
                },
                "description": {
                    "type": "string"
                },
                "params": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^[a-zA-Z_][a-zA-Z0-9_]+$": {
                            "type": "object",
                            "required": [
                                "type"
                            ],
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "string",
                                        "boolean",
                                        "file",
                                        "directory"
                                    ]
                                },
                                "shellEscape": {
                                    "type": "boolean"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "page": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "list",
                        "detail"
                    ]
                },
                "title": {
                    "type": "string"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "list"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "mode"
                        ],
                        "properties": {
                            "mode": {
                                "type": "string",
                                "enum": [
                                    "generator",
                                    "filter"
                                ]
                            },
                            "showPreview": {
                                "type": "boolean"
                            },
                            "searchPlaceholder": {
                                "type": "string",
                                "default": "Search..."
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "list"
                            }
                        }
                    },
                    "then": {}
                }
            ]
        },
        "input": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "index": {
                    "type": "integer",
                    "minimum": 0
                },
                "value": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "boolean"
                        }
                    ]
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "textfield",
                        "textarea",
                        "password",
                        "checkbox",
                        "dropdown",
                        "const",
                        "filePicker"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "textarea"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "value": {
                                "type": "string"
                            },
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "textfield"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title"
                        ],
                        "properties": {
                            "default": {
                                "type": "string"
                            },
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "label"
                        ],
                        "properties": {
                            "value": {
                                "type": "boolean"
                            },
                            "label": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "dropdown"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "data": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "title",
                                        "value"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
