{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://pomdtr.github.io/sunbeam/schemas/extension.json",
    "type": "object",
    "required": [
        "title",
        "version",
        "commands"
    ],
    "additionalProperties": false,
    "properties": {
        "platforms": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "mac",
                    "linux",
                    "windows"
                ]
            }
        },
        "rootUrl": {
            "type": "string"
        },
        "postInstall": {
            "type": "string"
        },
        "requirements": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "which"
                ],
                "properties": {
                    "homePage": {
                        "type": "string"
                    },
                    "which": {
                        "type": "string"
                    }
                }
            }
        },
        "title": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "const": "1.0"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "rootItems": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "command",
                    "title"
                ],
                "additionalProperties": false,
                "properties": {
                    "command": {
                        "type": "string",
                        "pattern": "^[a-zA-Z][a-zA-Z0-9-_]+$"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "with": {
                        "type": "object",
                        "additionalProperties": false,
                        "patternProperties": {
                            "^[a-zA-Z][a-zA-Z0-9-_]+$": {
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "boolean"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "commands": {
            "type": "array",
            "additionalProperties": false,
            "items": {
                "$ref": "#/$defs/command"
            }
        }
    },
    "$defs": {
        "param": {
            "type": "object",
            "required": [
                "name",
                "type"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "string",
                        "boolean",
                        "file",
                        "folder"
                    ]
                },
                "input": {
                    "type": "object"
                }
            }
        },
        "command": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "env": {
                    "type": "object",
                    "patternProperties": {
                        "^\\w+$": {
                            "type": "string"
                        }
                    }
                },
                "exec": {
                    "type": "string"
                },
                "onSuccess": {
                    "type": "string",
                    "enum": [
                        "push-page",
                        "open-url",
                        "copy-text"
                    ]
                },
                "params": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/param"
                    }
                }
            }
        }
    }
}
