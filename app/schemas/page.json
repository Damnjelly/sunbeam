{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "http://github.com/pomdtr/sunbeam/page",
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "list",
                "detail",
                "form"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "list"
                    }
                }
            },
            "then": {
                "required": [
                    "items"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/listitem"
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "detail"
                    }
                }
            },
            "then": {
                "required": [
                    "title",
                    "preview"
                ],
                "properties": {
                    "type": {
                        "const": "detail"
                    },
                    "title": {
                        "type": "string"
                    },
                    "preview": {
                        "$ref": "#/$defs/preview"
                    },
                    "actions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/action"
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "form"
                    }
                }
            },
            "then": {
                "properties": {
                    "type": {
                        "const": "form"
                    },
                    "title": {
                        "type": "string"
                    },
                    "inputs": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "target": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "command"
                        ],
                        "properties": {
                            "command": {
                                "type": "string"
                            },
                            "with": {
                                "type": "object",
                                "additionalProperties": false,
                                "patternProperties": {
                                    "^[a-zA-Z_][a-zA-Z0-9_]+$": {
                                        "anyOf": [
                                            {
                                                "type": "string"
                                            },
                                            {
                                                "type": "boolean"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    ],
    "$defs": {
        "listitem": {
            "additionalProperties": false,
            "required": [
                "title",
                "actions"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "preview": {
                    "$ref": "#/$defs/preview"
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/action"
                    }
                }
            }
        },
        "action": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "copy-text",
                        "reload-page",
                        "submit-form",
                        "open-url",
                        "run-command"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "run-command"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title",
                            "command"
                        ],
                        "properties": {
                            "with": {
                                "type": "object",
                                "additionalProperties": false,
                                "patternProperties": {
                                    "^[a-zA-Z_][a-zA-Z0-9_]+$": {
                                        "anyOf": [
                                            {
                                                "type": "object"
                                            },
                                            {
                                                "type": "string"
                                            },
                                            {
                                                "type": "boolean"
                                            }
                                        ]
                                    }
                                }
                            },
                            "command": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "copy-text"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "text"
                        ],
                        "properties": {
                            "text": {
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "open-url"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "url"
                        ],
                        "properties": {
                            "url": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        },
        "preview": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "required": [
                        "command"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "command": {
                            "type": "string"
                        },
                        "with": {
                            "type": "object",
                            "additionalProperties": false,
                            "patternProperties": {
                                "^[a-zA-Z_][a-zA-Z0-9_]+$": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "boolean"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
