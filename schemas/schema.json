{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://github.com/pomdtr/sunbeam/manifest",
    "type": "object",
    "required": [
        "name",
        "rootItems",
        "scripts"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "preferences": {
            "type": "array"
        },
        "rootItems": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/listitem"
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "command",
                    "output"
                ],
                "properties": {
                    "cwd": {
                        "type": "boolean"
                    },
                    "output": {
                        "type": "string",
                        "enum": [
                            "list",
                            "full",
                            "silent"
                        ]
                    },
                    "command": {
                        "type": "string"
                    },
                    "params": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/formitem"
                        }
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "output": {
                                    "const": "full"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "format": {
                                    "type": "string",
                                    "enum": [
                                        "markdown",
                                        "code"
                                    ]
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "output": {
                                    "const": "list"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "dynamic": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                ]
            }
        }
    },
    "definitions": {
        "listitem": {
            "type": "object",
            "required": [
                "title",
                "actions"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "actions": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/action"
                    }
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "action": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "open-file",
                        "open-url",
                        "copy",
                        "run",
                        "reload"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "shortcut": {
                    "type": "string"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-file"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "path"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "application": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-url"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "url"
                        ],
                        "properties": {
                            "url": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "copy"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "content"
                        ],
                        "properties": {
                            "content": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "run"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "target"
                        ],
                        "properties": {
                            "target": {
                                "type": "string"
                            },
                            "params": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "reload"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "params": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "formitem": {
            "type": "object",
            "required": [
                "type",
                "id",
                "title"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "textfield",
                        "textarea",
                        "checkbox",
                        "dropdown"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textarea"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textfield"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "secure": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "label"
                        ],
                        "properties": {
                            "label": {
                                "type": "string"
                            },
                            "true_substitution": {
                                "type": "string"
                            },
                            "false_substitution": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "dropdown"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "data": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "title",
                                        "value"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
