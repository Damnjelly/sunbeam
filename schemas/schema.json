{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://github.com/pomdtr/sunbeam/manifest",
    "type": "object",
    "required": [
        "name",
        "title",
        "version",
        "entrypoints",
        "scripts"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "const": "1.0"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "preferences": {
            "type": "array"
        },
        "entrypoints": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/action"
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/definitions/page"
                    }
                ],
                "required": [
                    "mode"
                ],
                "properties": {
                    "mode": {
                        "type": "string",
                        "enum": [
                            "filter",
                            "generator",
                            "pager"
                        ]
                    }
                }
            }
        }
    },
    "definitions": {
        "page": {
            "type": "object",
            "required": [
                "command"
            ],
            "properties": {
                "command": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "cwd": {
                    "type": "string",
                    "enum": [
                        "currentDir",
                        "extensionDir"
                    ],
                    "default": "extensionDir"
                },
                "inputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/formitem"
                    }
                }
            }
        },
        "listitem": {
            "type": "object",
            "required": [
                "title",
                "actions"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "$ref": "#/definitions/action"
                }
            }
        },
        "action": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "shortcut": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "copy-text",
                        "reload-page",
                        "open-url",
                        "open-file",
                        "exec-command",
                        "run-script"
                    ]
                },
                "with": {
                    "type": "object",
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "boolean"
                            }
                        ]
                    }
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "run-script"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title",
                            "page"
                        ],
                        "properties": {
                            "page": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "copy-text"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "content"
                        ],
                        "properties": {
                            "content": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-url"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "url"
                        ],
                        "properties": {
                            "url": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "exec-command"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "command": {
                                "type": "string"
                            },
                            "onSuccess": {
                                "type": "string",
                                "enum": [
                                    "reload-page"
                                ]
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-file"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "path"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        },
        "formitem": {
            "type": "object",
            "required": [
                "type",
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "textfield",
                        "textarea",
                        "password",
                        "checkbox",
                        "dropdown",
                        "filePicker"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textarea"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textfield"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "label"
                        ],
                        "properties": {
                            "label": {
                                "type": "string"
                            },
                            "true_substitution": {
                                "type": "string",
                                "default": "true"
                            },
                            "false_substitution": {
                                "type": "string",
                                "default": "false"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "dropdown"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "data": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "title",
                                        "value"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
