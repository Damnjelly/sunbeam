{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://github.com/pomdtr/sunbeam/manifest",
    "type": "object",
    "required": [
        "name",
        "title",
        "version",
        "scripts"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[a-z-]+$"
        },
        "postInstall": {
            "type": "string"
        },
        "requirements": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "title": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "const": "1.0"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "preferences": {
            "type": "array"
        },
        "rootItems": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "script",
                    "title"
                ],
                "additionalProperties": false,
                "properties": {
                    "script": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "with": {
                        "type": "object",
                        "patternProperties": {
                            "^[a-z-]+$": {
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "boolean"
                                    },
                                    {
                                        "$ref": "#/definitions/forminput"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-z-]+$": {
                    "$ref": "#/definitions/script"
                }
            },
            "not": {
                "anyOf": [
                    {
                        "required": [
                            "extension"
                        ]
                    },
                    {
                        "required": [
                            "query"
                        ]
                    },
                    {
                        "required": [
                            "completion"
                        ]
                    },
                    {
                        "required": [
                            "help"
                        ]
                    }
                ]
            }
        }
    },
    "definitions": {
        "script": {
            "type": "object",
            "required": [
                "command"
            ],
            "properties": {
                "onSuccess": {
                    "type": "string",
                    "enum": [
                        "push-page",
                        "copy-to-clipboard",
                        "open-in-browser"
                    ]
                },
                "command": {
                    "type": "string"
                },
                "cwd": {
                    "type": "string",
                    "enum": [
                        "currentDir",
                        "extensionDir",
                        "homeDir"
                    ],
                    "default": "extensionDir"
                },
                "description": {
                    "type": "string"
                },
                "params": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^[a-z-]+$": {
                            "type": "object",
                            "required": [
                                "type"
                            ],
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "string",
                                        "boolean"
                                    ]
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "allOf": [
                {
                    "if": {
                        "required": [
                            "onSuccess"
                        ],
                        "properties": {
                            "onSuccess": {
                                "const": "push-page"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "page"
                        ],
                        "properties": {
                            "page": {
                                "$ref": "#/definitions/page"
                            }
                        }
                    }
                }
            ]
        },
        "page": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "list",
                        "detail"
                    ]
                },
                "title": {
                    "type": "string"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "list"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "mode"
                        ],
                        "properties": {
                            "mode": {
                                "type": "string",
                                "enum": [
                                    "generator",
                                    "filter"
                                ]
                            },
                            "showPreview": {
                                "type": "boolean"
                            },
                            "searchPlaceholder": {
                                "type": "string",
                                "default": "Search..."
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "list"
                            }
                        }
                    },
                    "then": {}
                }
            ]
        },
        "listitem": {
            "type": "object",
            "required": [
                "title",
                "actions"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "$ref": "#/definitions/action"
                }
            }
        },
        "action": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "shortcut": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "copy-text",
                        "reload-page",
                        "open-url",
                        "open-path",
                        "run-script"
                    ]
                },
                "with": {
                    "type": "object",
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "boolean"
                            }
                        ]
                    }
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "run-script"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title",
                            "script"
                        ],
                        "properties": {
                            "script": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "copy-text"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "content"
                        ],
                        "properties": {
                            "content": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-url"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "url"
                        ],
                        "properties": {
                            "url": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-path"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "path"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        },
        "forminput": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "textfield",
                        "textarea",
                        "password",
                        "checkbox",
                        "dropdown",
                        "filePicker"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textarea"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textfield"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "label"
                        ],
                        "properties": {
                            "label": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "dropdown"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "data": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "title",
                                        "value"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
