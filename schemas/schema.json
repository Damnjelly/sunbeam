{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://pomdtr.github.io/sunbeam/schemas/page.json",
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "list",
                "detail"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "list"
                    }
                }
            },
            "then": {
                "type": "object",
                "required": [
                    "items"
                ],
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "const": "list"
                    },
                    "$schema": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "generateItems": {
                        "type": "boolean"
                    },
                    "showPreview": {
                        "type": "boolean"
                    },
                    "actions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/action"
                        }
                    },
                    "inputs": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/input"
                        }
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/listitem"
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "detail"
                    }
                }
            },
            "then": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "$schema": {
                        "type": "string"
                    },
                    "content": {
                        "$ref": "#/$defs/preview"
                    },
                    "type": {
                        "const": "detail"
                    },
                    "inputs": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/input"
                        }
                    },
                    "actions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/action"
                        }
                    }
                }
            }
        }
    ],
    "$defs": {
        "listitem": {
            "additionalProperties": false,
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "preview": {
                    "$ref": "#/$defs/preview"
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/action"
                    }
                }
            }
        },
        "action": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "copy",
                        "open",
                        "reload",
                        "edit",
                        "run",
                        "push"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "copy"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "type",
                            "text"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "type": {
                                "const": "copy"
                            },
                            "title": {
                                "type": "string"
                            },
                            "shortcut": {
                                "type": "string"
                            },
                            "text": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        },
        "input": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "textfield",
                        "password",
                        "textarea",
                        "dropdown"
                    ]
                }
            }
        },
        "preview": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "text"
                    ],
                    "properties": {
                        "text": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "command"
                    ],
                    "properties": {
                        "command": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        }
    }
}
