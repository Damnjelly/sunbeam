{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://github.com/pomdtr/sunbeam/manifest",
    "type": "object",
    "required": [
        "id",
        "commands"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "commands": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "mode"
                ],
                "additionalProperties": false,
                "properties": {
                    "hidden": {
                        "type": "boolean"
                    },
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "subtitle": {
                        "type": "string"
                    },
                    "mode": {
                        "type": "string",
                        "enum": [
                            "silent",
                            "fullOutput",
                            "list",
                            "action"
                        ]
                    },
                    "action": {
                        "type": "object"
                    },
                    "command": {
                        "type": "string"
                    },
                    "params": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "type": "object",
                                    "required": [
                                        "type",
                                        "id",
                                        "title",
                                        "placeholder"
                                    ],
                                    "properties": {
                                        "type": {
                                            "const": "textarea"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "placeholder": {
                                            "type": "string"
                                        },
                                        "default": {
                                            "type": "string"
                                        }
                                    }
                                },
                                {
                                    "type": "object",
                                    "required": [
                                        "type",
                                        "title",
                                        "placeholder"
                                    ],
                                    "properties": {
                                        "type": {
                                            "const": "textfield"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "placeholder": {
                                            "type": "string"
                                        },
                                        "default": {
                                            "type": "string"
                                        }
                                    }
                                },
                                {
                                    "type": "object",
                                    "required": [
                                        "type",
                                        "title",
                                        "label"
                                    ],
                                    "properties": {
                                        "type": {
                                            "const": "checkbox"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "label": {
                                            "type": "string"
                                        },
                                        "default": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}
