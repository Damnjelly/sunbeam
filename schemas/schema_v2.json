{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://github.com/pomdtr/sunbeam/manifest",
    "type": "object",
    "required": [
        "name"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "preferences": {
            "type": "array"
        },
        "rootItems": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/action"
            }
        },
        "pages": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "title",
                    "script",
                    "type"
                ],
                "additionalProperties": false,
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "list",
                            "detail",
                            "raw"
                        ]
                    },
                    "script": {
                        "$ref": "#/definitions/script"
                    },
                    "actions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/action"
                        }
                    }
                }
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/script"
            }
        }
    },
    "definitions": {
        "script": {
            "type": "object",
            "required": [
                "command"
            ],
            "additionalProperties": false,
            "properties": {
                "command": {
                    "type": "string"
                },
                "inputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/formitem"
                    }
                }
            }
        },
        "listitem": {
            "type": "object",
            "required": [
                "title",
                "output"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "output": {
                    "type": [
                        "number",
                        "string",
                        "boolean",
                        "object",
                        "array",
                        "null"
                    ]
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "action": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "if": {
                    "type": "string"
                },
                "shortcut": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "copy",
                        "reload",
                        "open",
                        "run",
                        "exec",
                        "push"
                    ]
                },
                "with": {
                    "type": "object",
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "boolean"
                            }
                        ]
                    }
                }
            }
        },
        "formitem": {
            "type": "object",
            "required": [
                "type",
                "name",
                "title"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "textfield",
                        "textarea",
                        "checkbox",
                        "dropdown"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textarea"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "textfield"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "secure": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "label"
                        ],
                        "properties": {
                            "label": {
                                "type": "string"
                            },
                            "true_substitution": {
                                "type": "string"
                            },
                            "false_substitution": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "dropdown"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "data"
                        ],
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "data": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "title",
                                        "value"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
