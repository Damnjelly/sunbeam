{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://github.com/pomdtr/sunbeam/item",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "subtitle": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "items": {
                "type": "object",
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "type",
                            "command"
                        ],
                        "properties": {
                            "type": {
                                "const": "push"
                            },
                            "target": {
                                "type": "string"
                            },
                            "params": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}
