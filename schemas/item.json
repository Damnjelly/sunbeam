{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://github.com/pomdtr/sunbeam/item",
    "type": "object",
    "required": [
        "title",
        "actions"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "subtitle": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/action"
            }
        },
        "accessories": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "definitions": {
        "action": {
            "type": "object",
            "required": [
                "type",
                "shortcut"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "open-file",
                        "open-url",
                        "copy",
                        "exec",
                        "launch",
                        "reload"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "shortcut": {
                    "type": "string"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-file"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "path"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "application": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "open-url"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "url"
                        ],
                        "properties": {
                            "url": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "copy"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "content"
                        ],
                        "properties": {
                            "content": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "exec"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title",
                            "command"
                        ],
                        "properties": {
                            "command": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "launch"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "title",
                            "target"
                        ],
                        "properties": {
                            "target": {
                                "type": "string"
                            },
                            "params": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "reload"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "params": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
