#!/usr/bin/env bash

set -eo pipefail

# Usage: sunbeam run ./sunbeam-extension

sunbeam query --null-input '{
    type: "detail",
    title: "Hello, Sunbeam!",
    preview: "Hello, Sunbeam!",
    actions: [
        {
            type: "copy",
            text: "Hello, sunbeam!",
        }
    ]
}'
