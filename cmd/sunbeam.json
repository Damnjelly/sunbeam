{
    "$schema": "https://raw.githubusercontent.com/pomdtr/sunbeam/main/schemas/schema.json",
    "type": "list",
    "actions": [
        {
            "title": "Edit Config",
            "type": "edit",
            "path": "~/.config/sunbeam/sunbeam.json",
            "shortcut": "ctrl+e"
        }
    ],
    "items": [
        {
            "title": "Manage Installed Extensions",
            "actions": [
                {
                    "title": "Manage Extensions",
                    "type": "run",
                    "command": "sunbeam extension manage",
                    "onSuccess": "push"
                }
            ]
        },
        {
            "title": "Browse Available Extensions",
            "actions": [
                {
                    "title": "Browse Extensions",
                    "type": "run",
                    "command": "sunbeam extension browse",
                    "onSuccess": "push"
                }
            ]
        },
        {
            "title": "Create New Extension",
            "actions": [
                {
                    "title": "Create Extension",
                    "type": "run",
                    "command": "sunbeam extension create {{ extensionName }}",
                    "onSuccess": "push",
                    "inputs": [
                        {
                            "title": "Extension Name",
                            "name": "extensionName",
                            "type": "textfield"
                        }
                    ]
                }
            ]
        }
    ]
}
