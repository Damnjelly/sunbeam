{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "text"
    ],
    "properties": {
        "format": {
            "type": "string",
            "enum": [
                "markdown",
                "ansi",
                "template"
            ]
        },
        "text": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "items": {
                "$ref": "./action.schema.json"
            }
        }
    }
}
