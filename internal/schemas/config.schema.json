{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "oneliners": {
            "type": "array",
            "description": "A list of commands that will be shown in the root list",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "command"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "command": {
                        "type": "string"
                    },
                    "exit": {
                        "type": "boolean"
                    },
                    "dir": {
                        "type": "string"
                    }
                }
            }
        },
        "extensions": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "object",
                    "required": [
                        "origin"
                    ],
                    "properties": {
                        "origin": {
                            "type": "string"
                        },
                        "root": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "preferences": {
                            "type": "object"
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "command"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "command": {
                                        "type": "string"
                                    },
                                    "params": {
                                        "$ref": "./params.schema.json"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
