{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "label",
        "name",
        "type"
    ],
    "properties": {
        "label": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "type": {
            "enum": [
                "text",
                "textarea",
                "password",
                "checkbox",
                "number"
            ]
        },
        "optional": {
            "type": "boolean"
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "text"
                    }
                }
            },
            "then": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "object",
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "default": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "password"
                    }
                }
            },
            "then": {
                "type": "object",
                "properties": {
                    "password": {
                        "type": "object",
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "default": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "textarea"
                    }
                }
            },
            "then": {
                "type": "object",
                "properties": {
                    "textarea": {
                        "type": "object",
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "default": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "checkbox"
                    }
                }
            },
            "then": {
                "type": "object",
                "properties": {
                    "checkbox": {
                        "type": "object",
                        "properties": {
                            "label": {
                                "type": "string"
                            },
                            "default": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "number"
                    }
                }
            },
            "then": {
                "type": "object",
                "required": [
                    "number"
                ],
                "properties": {
                    "number": {
                        "type": "object",
                        "properties": {
                            "placeholder": {
                                "type": "string"
                            },
                            "default": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
    ]
}
