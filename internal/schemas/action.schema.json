{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "type": {
            "enum": [
                "copy",
                "open",
                "edit",
                "run",
                "reload",
                "exit"
            ]
        },
        "title": {
            "type": "string"
        },
        "key": {
            "type": "string"
        }
    },
    "allOf": [
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "copy"
                    }
                }
            },
            "then": {
                "required": [
                    "copy"
                ],
                "properties": {
                    "copy": {
                        "type": "object",
                        "required": [
                            "text"
                        ],
                        "properties": {
                            "text": {
                                "type": "string"
                            },
                            "exit": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "open"
                    }
                }
            },
            "then": {
                "required": [
                    "open"
                ],
                "properties": {
                    "open": {
                        "type": "object",
                        "properties": {
                            "url": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "edit"
                    }
                }
            },
            "then": {
                "required": [
                    "edit"
                ],
                "properties": {
                    "edit": {
                        "type": "object",
                        "required": [
                            "path"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "reload": {
                                "type": "boolean"
                            },
                            "exit": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "run"
                    }
                }
            },
            "then": {
                "required": [
                    "run"
                ],
                "type": "object",
                "properties": {
                    "run": {
                        "type": "object",
                        "required": [
                            "command"
                        ],
                        "properties": {
                            "command": {
                                "type": "string"
                            },
                            "params": {
                                "$ref": "./params.schema.json"
                            },
                            "exit": {
                                "type": "boolean"
                            },
                            "reload": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "const": "reload"
                    }
                }
            },
            "then": {
                "type": "object",
                "required": [
                    "reload"
                ],
                "properties": {
                    "reload": {
                        "type": "object",
                        "properties": {
                            "params": {
                                "$ref": "./params.schema.json"
                            }
                        }
                    }
                }
            }
        }
    ]
}
