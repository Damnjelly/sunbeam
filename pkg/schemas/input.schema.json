{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {
            "$ref": "#/definitions/text"
        },
        {
            "$ref": "#/definitions/textarea"
        },
        {
            "$ref": "#/definitions/checkbox"
        },
        {
            "$ref": "#/definitions/select"
        }
    ],
    "definitions": {
        "text": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "text",
                    "description": "The type of the input."
                },
                "placeholder": {
                    "type": "string",
                    "description": "The placeholder of the input."
                },
                "default": {
                    "type": "string",
                    "description": "The default value of the input."
                },
                "secure": {
                    "type": "boolean",
                    "description": "Whether the input should be secure."
                }
            }
        },
        "textarea": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "checkbox",
                    "description": "The type of the input."
                },
                "default": {
                    "type": "boolean",
                    "description": "The default value of the input."
                },
                "label": {
                    "type": "string",
                    "description": "The label of the input."
                }
            }
        },
        "checkbox": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "textarea",
                    "description": "The type of the input."
                },
                "label": {
                    "type": "string",
                    "description": "The label of the input."
                },
                "default": {
                    "type": "string",
                    "description": "The default value of the input."
                }
            }
        },
        "select": {
            "type": "object",
            "required": [
                "type",
                "items"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "select",
                    "description": "The type of the input."
                },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "title",
                            "value"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "title": {
                                "type": "string",
                                "description": "The title of the item."
                            },
                            "value": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "number"
                                    }
                                ]
                            }
                        }
                    },
                    "description": "The items of the input."
                },
                "default": {
                    "type": "string",
                    "description": "The default value of the input."
                }
            }
        }
    }
}
