{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "type": {
            "enum": [
                "copy",
                "open",
                "run",
                "reload",
                "pop",
                "exit"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "copy"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/copy"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "open"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/open"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "run"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/run"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "reload"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/reload"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "pop"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/pop"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "exit"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/exit"
            }
        }
    ],
    "definitions": {
        "copy": {
            "required": [
                "type",
                "text"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "copy",
                    "description": "The type of the action."
                },
                "exit": {
                    "type": "boolean",
                    "description": "Whether to exit the app after copying."
                },
                "text": {
                    "type": "string",
                    "description": "The text to copy."
                }
            }
        },
        "open": {
            "required": [
                "type",
                "target"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "open",
                    "description": "The type of the action."
                },
                "exit": {
                    "type": "boolean",
                    "description": "Whether to exit the app after opening."
                },
                "target": {
                    "type": "string",
                    "description": "The target to open."
                },
                "app": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/application"
                        },
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/application"
                            }
                        }
                    ]
                }
            }
        },
        "run": {
            "required": [
                "type",
                "command"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "run",
                    "description": "The type of the action."
                },
                "command": {
                    "type": "string",
                    "description": "The name of the command to run."
                },
                "params": {
                    "type": "object",
                    "description": "The parameters to pass to the command.",
                    "patternProperties": {
                        ".+": true
                    }
                }
            }
        },
        "reload": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "reload"
                },
                "params": {
                    "type": "object",
                    "description": "The parameters to pass to the command.",
                    "patternProperties": {
                        ".+": true
                    }
                }
            }
        },
        "exit": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "exit"
                }
            }
        },
        "pop": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "pop"
                },
                "reload": {
                    "type": "boolean",
                    "description": "Whether to reload the page after popping."
                }
            }
        },
        "application": {
            "type": "object",
            "required": [
                "name"
            ],
            "additionalProperties": false,
            "properties": {
                "platform": {
                    "enum": [
                        "windows",
                        "mac",
                        "linux"
                    ]
                },
                "name": {
                    "type": "string"
                }
            }
        }
    }
}
