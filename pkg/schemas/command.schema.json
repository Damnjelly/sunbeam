{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "type": {
            "enum": [
                "copy",
                "open",
                "run",
                "reload",
                "exit"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "copy"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/copy"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "open"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/open"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "run"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/run"
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "reload"
                    }
                }
            },
            "then": {
                "$ref": "#/definitions/reload"
            }
        }
    ],
    "definitions": {
        "copy": {
            "required": [
                "type",
                "text"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "copy"
                },
                "exit": {
                    "type": "boolean"
                },
                "text": {
                    "type": "string"
                }
            }
        },
        "open": {
            "required": [
                "type",
                "target"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "open"
                },
                "exit": {
                    "type": "boolean"
                },
                "target": {
                    "type": "string"
                },
                "app": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/application"
                        },
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/application"
                            }
                        }
                    ]
                }
            }
        },
        "run": {
            "required": [
                "type",
                "command"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "run"
                },
                "command": {
                    "type": "string"
                },
                "params": {
                    "type": "object",
                    "patternProperties": {
                        ".+": true
                    }
                }
            }
        },
        "reload": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "reload"
                },
                "params": {
                    "type": "object",
                    "patternProperties": {
                        ".+": true
                    }
                }
            }
        },
        "exit": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "exit"
                }
            }
        },
        "application": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "windows": {
                    "type": "string"
                },
                "mac": {
                    "type": "string"
                },
                "linux": {
                    "type": "string"
                }
            }
        }
    }
}
