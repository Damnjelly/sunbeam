{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "type",
        "text"
    ],
    "properties": {
        "type": {
            "const": "detail"
        },
        "title": {
            "type": "string"
        },
        "highlight": {
            "type": "string",
            "enum": [
                "markdown",
                "ansi"
            ]
        },
        "text": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "items": {
                "$ref": "./action.schema.json"
            }
        }
    }
}
