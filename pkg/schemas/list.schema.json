{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "items"
    ],
    "properties": {
        "emptyText": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "items": {
                "$ref": "./action.schema.json"
            }
        },
        "dynamic": {
            "type": "boolean"
        },
        "items": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/item"
            }
        }
    },
    "definitions": {
        "item": {
            "additionalProperties": false,
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "./action.schema.json"
                    }
                }
            }
        }
    }
}
