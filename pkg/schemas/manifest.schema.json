{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "commands"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "platforms": {
            "type": "array",
            "items": {
                "enum": [
                    "linux",
                    "macos",
                    "windows"
                ]
            }
        },
        "requirements": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "link"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "link": {
                        "type": "string"
                    }
                }
            }
        },
        "description": {
            "type": "string"
        },
        "root": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/commandref"
            }
        },
        "preferences": {
            "$ref": "#/definitions/entries"
        },
        "commands": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/command"
            }
        }
    },
    "definitions": {
        "commandref": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "string"
                },
                "params": {
                    "$ref": "params.schema.json"
                }
            }
        },
        "command": {
            "type": "object",
            "required": [
                "title",
                "name",
                "mode"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "hidden": {
                    "type": "boolean"
                },
                "title": {
                    "type": "string"
                },
                "mode": {
                    "type": "string",
                    "enum": [
                        "list",
                        "detail",
                        "tty",
                        "silent"
                    ]
                },
                "params": {
                    "$ref": "#/definitions/entries"
                }
            }
        },
        "entries": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "string",
                            "boolean",
                            "number"
                        ]
                    },
                    "description": {
                        "type": "string"
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "default": {
                        "type": [
                            "string",
                            "boolean",
                            "number"
                        ]
                    }
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "boolean"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "default": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "number"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "default": {
                                "type": "number"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "string"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "default": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        }
    }
}
