{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "commands"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "platforms": {
            "type": "array",
            "items": {
                "enum": [
                    "linux",
                    "macos",
                    "windows"
                ]
            }
        },
        "requirements": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "link"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "link": {
                        "type": "string"
                    }
                }
            }
        },
        "description": {
            "type": "string"
        },
        "root": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/commandref"
            }
        },
        "commands": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/command"
            }
        }
    },
    "definitions": {
        "commandref": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "command": {
                    "type": "string"
                },
                "params": {
                    "patternProperties": {
                        ".+": {
                            "type": [
                                "string",
                                "boolean"
                            ]
                        }
                    }
                }
            }
        },
        "command": {
            "type": "object",
            "required": [
                "title",
                "name",
                "mode"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "hidden": {
                    "type": "boolean"
                },
                "title": {
                    "type": "string"
                },
                "mode": {
                    "type": "string",
                    "enum": [
                        "list",
                        "detail",
                        "tty",
                        "silent"
                    ]
                },
                "params": {
                    "type": "array",
                    "items": {
                        "$ref": "./input.schema.json"
                    }
                }
            }
        }
    }
}
