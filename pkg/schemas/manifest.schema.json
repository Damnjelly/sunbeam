{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "commands"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "commands": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/commandspec"
            }
        }
    },
    "definitions": {
        "commandspec": {
            "type": "object",
            "required": [
                "title",
                "name",
                "mode"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "hidden": {
                    "type": "boolean"
                },
                "title": {
                    "type": "string"
                },
                "mode": {
                    "enum": [
                        "view",
                        "no-view"
                    ]
                },
                "params": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "name",
                            "type"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "string",
                                    "boolean",
                                    "number"
                                ]
                            },
                            "description": {
                                "type": "string"
                            },
                            "default": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "boolean"
                                    },
                                    {
                                        "type": "number"
                                    }
                                ]
                            },
                            "required": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        }
    }
}
