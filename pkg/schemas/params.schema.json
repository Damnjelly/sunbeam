{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "patternProperties": {
        "^[a-zA-Z-]+[a-zA-Z0-9-]*$": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "number"
                },
                {
                    "type": "boolean"
                },
                {
                    "$ref": "#/definitions/input"
                }
            ]
        }
    },
    "definitions": {
        "input": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "enum": [
                        "text",
                        "textarea",
                        "checkbox",
                        "select"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "text"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "type",
                            "title"
                        ],
                        "properties": {
                            "type": {
                                "const": "text"
                            },
                            "title": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "default": {
                                "type": "string"
                            },
                            "placeholder": {
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "textarea"
                            }
                        },
                        "then": {
                            "required": [
                                "type",
                                "title"
                            ],
                            "properties": {
                                "type": {
                                    "const": "textarea"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "required": {
                                    "type": "boolean"
                                },
                                "default": {
                                    "type": "string"
                                },
                                "placeholder": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "type",
                            "title",
                            "label"
                        ],
                        "properties": {
                            "type": {
                                "const": "checkbox"
                            },
                            "title": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "label": {
                                "type": "string"
                            },
                            "default": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "type": {
                                "const": "select"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "type",
                            "title",
                            "items"
                        ],
                        "properties": {
                            "type": {
                                "const": "select"
                            },
                            "title": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "options": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "title",
                                        "value"
                                    ],
                                    "properties": {
                                        "title": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "oneOf": [
                                                {
                                                    "type": "string"
                                                },
                                                {
                                                    "type": "number"
                                                },
                                                {
                                                    "type": "boolean"
                                                }
                                            ]
                                        }
                                    }
                                }
                            },
                            "default": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "number"
                                    },
                                    {
                                        "type": "boolean"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    }
}
