{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "oneliners": {
            "type": "array",
            "description": "A list of commands that will be shown in the root list",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "command"
                ],
                "additionalProperties": false,
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "An friendly title for the command"
                    },
                    "command": {
                        "type": "string",
                        "description": "The command to run"
                    }
                }
            }
        },
        "extensions": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "origin": {
                                    "type": "string"
                                },
                                "preferences": {
                                    "type": "object",
                                    "patternProperties": {
                                        ".+": {
                                            "oneOf": [
                                                {
                                                    "type": "string"
                                                },
                                                {
                                                    "type": "number"
                                                },
                                                {
                                                    "type": "boolean"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
