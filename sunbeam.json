{
    "id": "sunbeam",
    "$schema": "./schemas/manifest.json",
    "commands": [
        {
            "id": "switch-alacritty-theme",
            "title": "Switch Theme",
            "subtitle": "Alacritty",
            "mode": "list",
            "list": {
                "command": "./examples/alacritty.mjs"
            }
        },
        {
            "id": "random",
            "title": "Random",
            "mode": "list",
            "list": {
                "command": "./examples/random_list.py"
            }
        },
        {
            "id": "list-repos",
            "mode": "list",
            "subtitle": "Github",
            "title": "Search My Repositories",
            "list": {
                "command": "./examples/github/list-repos.mjs"
            }
        },
        {
            "id": "file-browser",
            "title": "Browse Files",
            "subtitle": "System",
            "mode": "list",
            "list": {
                "command": "./examples/file-browser.mjs {{ .params.root }}"
            },
            "params": [
                {
                    "id": "root",
                    "type": "textfield",
                    "title": "Start Directory",
                    "placeholder": "/home/pomdtr"
                }
            ],
            "hidden": true
        },
        {
            "id": "browse-root",
            "mode": "action",
            "title": "Browse Home",
            "subtitle": "System",
            "action": {
                "type": "push",
                "target": "sunbeam/file-browser",
                "params": {
                    "root": "/"
                }
            }
        },
        {
            "id": "list-prs",
            "mode": "list",
            "subtitle": "Github",
            "hidden": true,
            "title": "List Pull Request",
            "list": {
                "command": "./examples/github/list-prs.mjs --repo {{ .params.repository }}"
            },
            "params": [
                {
                    "id": "repository",
                    "type": "textfield",
                    "title": "Repository",
                    "placeholder": "pomdtr/sunbeam"
                }
            ]
        },
        {
            "id": "view-readme",
            "mode": "detail",
            "subtitle": "Github",
            "title": "View Readme",
            "hidden": true,
            "detail": {
                "command": "./examples/github/view-readme.mjs {{ .params.repository }}"
            },
            "params": [
                {
                    "id": "repository",
                    "type": "textfield",
                    "title": "Repository",
                    "placeholder": "pomdtr/sunbeam"
                }
            ]
        },
        {
            "id": "form",
            "title": "Form",
            "subtitle": "Examples",
            "mode": "detail",
            "detail": {
                "command": "./examples/form.sh {{ .params.name }} {{ .params.address }}"
            },
            "params": [
                {
                    "id": "name",
                    "type": "textfield",
                    "title": "Name",
                    "placeholder": "John Doe"
                },
                {
                    "id": "address",
                    "type": "textfield",
                    "title": "Address",
                    "placeholder": "123 Main St"
                }
            ]
        }
    ]
}
