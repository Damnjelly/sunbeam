{
    "$schema": "./schemas/schema.json",
    "type": "list",
    "actions": [
        {
            "type": "edit",
            "title": "Edit Manifest",
            "path": "./sunbeam.json",
            "shortcut": "ctrl+e"
        }
    ],
    "items": [
        {
            "title": "Browse Current Dir",
            "subtitle": "File Browser",
            "actions": [
                {
                    "type": "push",
                    "title": "Browse Current Dir",
                    "command": [
                        "./docs/src/examples/file-browser/file-browser.py"
                    ]
                },
                {
                    "type": "push",
                    "title": "Browse Root Dir",
                    "command": [
                        "./docs/src/examples/file-browser/file-browser.py",
                        "/"
                    ]
                },
                {
                    "type": "edit",
                    "title": "Edit Script",
                    "path": "./docs/src/examples/file-browser/file-browser.py"
                }
            ]
        },
        {
            "title": "Browse Custom Dir",
            "subtitle": "File Browser",
            "actions": [
                {
                    "type": "push",
                    "title": "Browse Custom Dir",
                    "command": [
                        "./docs/src/examples/file-browser/file-browser.py",
                        "${input:dir}"
                    ],
                    "inputs": [
                        {
                            "name": "dir",
                            "title": "Directory",
                            "type": "textfield"
                        }
                    ]
                }
            ]
        },
        {
            "title": "Search Devdocs",
            "subtitle": "Devdocs",
            "actions": [
                {
                    "type": "push",
                    "title": "Search Docsets",
                    "command": [
                        "./docs/src/examples/devdocs/devdocs.sh"
                    ]
                },
                {
                    "type": "push",
                    "title": "Search Go Docs",
                    "command": [
                        "./docs/src/examples/devdocs/devdocs.sh",
                        "go"
                    ]
                }
            ]
        },
        {
            "title": "Search TLDR Pages",
            "subtitle": "TLDR",
            "actions": [
                {
                    "type": "push",
                    "title": "Run",
                    "command": [
                        "./docs/src/examples/tldr/tldr.sh"
                    ]
                }
            ]
        },
        {
            "title": "Search Bitwarden Items",
            "subtitle": "Bitwarden",
            "actions": [
                {
                    "type": "push",
                    "title": "Run",
                    "command": [
                        "./docs/src/examples/bitwarden/bitwarden.sh"
                    ]
                }
            ]
        },
        {
            "title": "List Todos",
            "subtitle": "Todo",
            "actions": [
                {
                    "type": "push",
                    "title": "Run",
                    "command": [
                        "./docs/src/examples/todo/todo.py"
                    ]
                }
            ]
        },
        {
            "title": "Search Repositories",
            "subtitle": "Github",
            "actions": [
                {
                    "type": "push",
                    "title": "Search",
                    "command": [
                        "./docs/src/examples/github/github.sh"
                    ]
                }
            ]
        },
        {
            "title": "Search Pull Requests",
            "subtitle": "Github",
            "actions": [
                {
                    "type": "push",
                    "title": "Search",
                    "command": [
                        "./docs/src/examples/github/github.sh",
                        "list-prs",
                        "pomdtr/excalidraw"
                    ]
                }
            ]
        }
    ]
}
