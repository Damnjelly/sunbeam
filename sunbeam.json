{
    "$schema": "./schemas/manifest.json",
    "name": "sunbeam",
    "rootItems": [
        {
            "title": "Show Suggestions",
            "subtitle": "Google",
            "target": "google-search"
        },
        {
            "title": "Show Random List",
            "target": "random"
        },
        {
            "title": "Copy Password",
            "subtitle": "Bitwarden",
            "target": "copy-password"
        },
        {
            "title": "List My Repositories",
            "subtitle": "GitHub",
            "target": "list-repos",
            "params": {
                "owner": "pomdtr"
            }
        },
        {
            "title": "List Dailymotion Repositories",
            "subtitle": "GitHub",
            "target": "list-repos",
            "params": {
                "owner": "dailymotion"
            }
        },
        {
            "title": "Browse Home",
            "subtitle": "System",
            "target": "browse-files",
            "params": {
                "root": "/Users/a.lacoin"
            }
        },
        {
            "title": "Browse Root",
            "target": "browse-files",
            "subtitle": "System",
            "params": {
                "root": "/"
            }
        },
        {
            "title": "List Airflow PRs",
            "subtitle": "Dailymotion",
            "target": "list-prs",
            "params": {
                "repository": "dailymotion/dwh-dags"
            }
        }
    ],
    "commands": {
        "google-search": {
            "type": "list",
            "command": "./examples/google.mjs --query {{ .query }}",
            "dynamic": true
        },
        "random": {
            "type": "list",
            "command": "./examples/random_list.py"
        },
        "list-repos": {
            "type": "list",
            "command": "./examples/github/list-repos.mjs --owner {{ .params.owner }}",
            "params": [
                {
                    "name": "owner",
                    "title": "Owner",
                    "type": "textfield"
                }
            ]
        },
        "copy-password": {
            "type": "list",
            "command": "./examples/bitwarden.sh"
        },
        "list-prs": {
            "type": "list",
            "command": "./examples/github/list-prs.mjs --repo {{ .params.repository }}",
            "params": [
                {
                    "title": "Repository",
                    "name": "repository",
                    "required": true,
                    "type": "textfield"
                }
            ]
        },
        "browse-files": {
            "type": "list",
            "command": "./examples/file-browser.mjs {{ .params.root }}",
            "params": [
                {
                    "type": "textfield",
                    "name": "root",
                    "required": true,
                    "title": "Start directory"
                }
            ]
        }
    }
}
