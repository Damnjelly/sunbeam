{
    "$schema": "./schemas/manifest.json",
    "name": "sunbeam",
    "rootItems": [
        {
            "title": "Show Suggestions",
            "target": "git-commit"
        },
        {
            "title": "Show Random List",
            "target": "random"
        },
        {
            "title": "List Repositories",
            "target": "list-repos"
        },
        {
            "title": "Browse Home",
            "target": "browse-files",
            "params": {
                "root": "/Users/a.lacoin"
            }
        },
        {
            "title": "Browse Root",
            "target": "browse-files",
            "params": {
                "root": "/"
            }
        },
        {
            "title": "List dwh-dags Requests",
            "target": "list-prs",
            "params": {
                "repository": "dailymotion/dwh-dags"
            }
        }
    ],
    "commands": {
        "google-search": {
            "type": "list",
            "command": "./examples/google.mjs --query {{ .query }}",
            "dynamic": true
        },
        "random": {
            "type": "list",
            "command": "./examples/random_list.py"
        },
        "list-repos": {
            "type": "list",
            "command": "./examples/github/list-repos.mjs"
        },
        "list-prs": {
            "type": "list",
            "command": "./examples/github/list-prs.mjs --repo {{ .params.repository }}",
            "params": [
                {
                    "title": "Repository",
                    "name": "repository",
                    "required": true,
                    "type": "textfield"
                }
            ]
        },
        "browse-files": {
            "type": "list",
            "command": "./examples/file-browser.mjs {{ .params.root }}",
            "params": [
                {
                    "type": "textfield",
                    "name": "root",
                    "required": true,
                    "title": "Start directory"
                }
            ]
        }
    }
}
