{
    "$schema": "./schemas/manifest.json",
    "commands": [
        {
            "id": "switch-alacritty-theme",
            "title": "Switch Theme",
            "subtitle": "Alacritty",
            "mode": "list",
            "command": "./examples/alacritty.mjs"
        },
        {
            "id": "list-repos",
            "mode": "list",
            "subtitle": "Github",
            "title": "Search My Repositories",
            "command": "./examples/github/list-repos.mjs"
        },
        {
            "id": "file-browser",
            "command": "./examples/file-browser.mjs {{ .params.root }}",
            "mode": "list",
            "title": "Browse Files",
            "subtitle": "System",
            "params": [
                {
                    "id": "root",
                    "type": "textfield",
                    "title": "Start Directory",
                    "placeholder": "/home/pomdtr"
                }
            ]
        },
        {
            "id": "list-prs",
            "mode": "list",
            "subtitle": "Github",
            "title": "List Pull Request",
            "command": "./examples/github/list-prs.mjs {{ if .params.repository }} --repo {{ .params.repository }} {{ end }}",
            "params": [
                {
                    "id": "repository",
                    "type": "textfield",
                    "title": "Repository",
                    "placeholder": "pomdtr/sunbeam",
                    "optional": true
                }
            ]
        },
        {
            "id": "view-readme",
            "mode": "fullOutput",
            "subtitle": "Github",
            "title": "View Readme",
            "command": "./examples/github/view-readme.mjs {{ .params.repository }}",
            "params": [
                {
                    "id": "repository",
                    "type": "textfield",
                    "title": "Repository",
                    "placeholder": "pomdtr/sunbeam"
                }
            ]
        },
        {
            "id": "form",
            "title": "Form",
            "subtitle": "Examples",
            "mode": "fullOutput",
            "command": "./examples/form.sh {{ .params.name }} {{ .params.address }}",
            "params": [
                {
                    "id": "name",
                    "type": "textfield",
                    "title": "Name",
                    "placeholder": "John Doe"
                },
                {
                    "id": "address",
                    "type": "textfield",
                    "title": "Address",
                    "placeholder": "123 Main St"
                }
            ]
        }
    ]
}
