{
    "$schema": "./scripts/page.json",
    "type": "list",
    "actions": [
        {
            "type": "edit",
            "title": "Edit Manifest",
            "path": "./sunbeam.json",
            "shortcut": "ctrl+e"
        },
        {
            "type": "reload",
            "shortcut": "ctrl+r"
        }
    ],
    "items": [
        {
            "title": "Browse Current Dir",
            "subtitle": "File Browser",
            "actions": [
                {
                    "type": "push",
                    "title": "Browse Current Dir",
                    "command": [
                        "./docs/src/code/file-browser.py"
                    ]
                },
                {
                    "type": "push",
                    "title": "Browse Root Dir",
                    "command": [
                        "./docs/src/code/file-browser.py",
                        "/"
                    ]
                },
                {
                    "type": "edit",
                    "title": "Edit Script",
                    "path": "./docs/src/code/file-browser.py"
                }
            ]
        },
        {
            "title": "Browse Custom Dir",
            "subtitle": "File Browser",
            "actions": [
                {
                    "type": "push",
                    "title": "Browse Custom Dir",
                    "command": [
                        "./docs/src/code/file-browser.py",
                        {
                            "type": "textfield",
                            "title": "Enter a directory"
                        }
                    ]
                }
            ]
        },
        {
            "title": "Search Devdocs",
            "subtitle": "Devdocs",
            "actions": [
                {
                    "type": "push",
                    "title": "Search Docsets",
                    "command": [
                        "./docs/src/code/devdocs.sh"
                    ]
                },
                {
                    "type": "push",
                    "title": "Search Go Docs",
                    "command": [
                        "./docs/src/code/devdocs.sh",
                        "go"
                    ]
                }
            ]
        },
        {
            "title": "Search TLDR Pages",
            "subtitle": "TLDR",
            "actions": [
                {
                    "type": "push",
                    "title": "Run",
                    "command": [
                        "./docs/src/code/tldr.sh"
                    ]
                }
            ]
        },
        {
            "title": "Search Bitwarden Items",
            "subtitle": "Bitwarden",
            "actions": [
                {
                    "type": "push",
                    "title": "Run",
                    "command": [
                        "./docs/src/code/bitwarden.sh"
                    ]
                }
            ]
        },
        {
            "title": "List Todos",
            "subtitle": "Todo",
            "actions": [
                {
                    "type": "push",
                    "title": "Run",
                    "command": [
                        "./docs/src/code/todo.py"
                    ]
                }
            ]
        },
        {
            "title": "Search Repositories",
            "subtitle": "Github",
            "actions": [
                {
                    "type": "push",
                    "title": "Search",
                    "command": [
                        "./docs/src/code/github.sh"
                    ]
                }
            ]
        },
        {
            "title": "Search Pull Requests",
            "subtitle": "Github",
            "actions": [
                {
                    "type": "push",
                    "title": "Search",
                    "command": [
                        "./docs/src/code/github.sh",
                        "list-prs",
                        "pomdtr/excalidraw"
                    ]
                }
            ]
        }
    ]
}
