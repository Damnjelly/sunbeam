{
    "$schema": "./schemas/schema.json",
    "name": "user",
    "title": "User",
    "rootItems": [
        {
            "title": "Form Selector",
            "action": {
                "type": "run",
                "target": "selector"
            }
        },
        {
            "title": "Open Google",
            "action": {
                "type": "open-url",
                "url": "https://www.google.com"
            }
        },
        {
            "title": "Git Commit",
            "action": {
                "type": "run",
                "target": "git-commit"
            }
        },
        {
            "title": "Show Suggestions",
            "action": {
                "type": "run",
                "target": "google-search"
            }
        },
        {
            "title": "Show Random List",
            "action": {
                "type": "run",
                "target": "random"
            }
        },
        {
            "title": "Copy Password",
            "subtitle": "Bitwarden",
            "action": {
                "type": "run",
                "target": "copy-password"
            }
        },
        {
            "title": "List My Repositories",
            "action": {
                "type": "run",
                "target": "list-repos",
                "params": {
                    "owner": "pomdtr"
                }
            }
        },
        {
            "title": "List Dailymotion Repositories",
            "action": {
                "type": "run",
                "target": "list-repos",
                "params": {
                    "owner": "dailymotion"
                }
            }
        },
        {
            "title": "Browse Directory",
            "action": {
                "type": "run",
                "target": "browse-files"
            }
        },
        {
            "title": "Browse Home",
            "action": {
                "type": "run",
                "target": "browse-files",
                "params": {
                    "root": "/Users/a.lacoin",
                    "all": true
                }
            }
        },
        {
            "title": "Browse Root",
            "action": {
                "type": "run",
                "target": "browse-files",
                "params": {
                    "root": "/"
                }
            }
        },
        {
            "title": "List Airflow PRs",
            "action": {
                "type": "run",
                "target": "list-prs",
                "params": {
                    "repository": "dailymotion/dwh-dags"
                }
            }
        }
    ],
    "scripts": {
        "list-k8s-namespaces": {
            "output": "list",
            "mode": "static",
            "command": "./examples/kubens.mjs"
        },
        "git-commit": {
            "command": "git commit -m {{ .params.message }} {{ .params.allowEmpty }}",
            "output": "detail",
            "format": "json",
            "params": [
                {
                    "id": "textfield",
                    "title": "textfield",
                    "type": "textfield",
                    "placeholder": "textfield"
                },
                {
                    "id": "password",
                    "title": "password",
                    "secure": true,
                    "type": "textfield",
                    "placeholder": "password"
                },
                {
                    "id": "textarea",
                    "title": "textarea",
                    "type": "textarea",
                    "placeholder": "textarea"
                },
                {
                    "id": "checkbox",
                    "title": "checkbox",
                    "type": "checkbox",
                    "label": "Allow Empty",
                    "true_substitution": "--allow-empty",
                    "false_substitution": ""
                },
                {
                    "id": "dropdown",
                    "title": "dropdown",
                    "type": "dropdown",
                    "placeholder": "dropdown",
                    "data": [
                        {
                            "title": "value1",
                            "value": "value1"
                        },
                        {
                            "title": "value2",
                            "value": "value1"
                        }
                    ]
                }
            ]
        },
        "google-search": {
            "output": "list",
            "mode": "dynamic",
            "command": "./examples/google.mjs --query {{ .query }}",
            "dynamic": true
        },
        "random": {
            "output": "list",
            "mode": "static",
            "command": "./examples/random_list.py"
        },
        "list-repos": {
            "output": "list",
            "mode": "static",
            "command": "./examples/github/list-repos.mjs --owner {{ .params.owner }}",
            "params": [
                {
                    "id": "owner",
                    "title": "Owner",
                    "type": "textfield"
                }
            ]
        },
        "copy-password": {
            "output": "list",
            "mode": "static",
            "command": "./examples/bitwarden.sh"
        },
        "list-prs": {
            "output": "list",
            "mode": "static",
            "command": "./examples/github/list-prs.mjs --repo {{ .params.repository }}",
            "params": [
                {
                    "id": "repository",
                    "title": "Repository",
                    "required": true,
                    "type": "textfield"
                }
            ]
        },
        "browse-files": {
            "output": "list",
            "mode": "static",
            "command": "./examples/file-browser.mjs {{ .params.root }} {{ .params.all }}",
            "params": [
                {
                    "id": "root",
                    "title": "Start directory",
                    "placeholder": "Start Directory",
                    "type": "textfield",
                    "required": true
                },
                {
                    "id": "all",
                    "title": "Show Hidden Files",
                    "required": true,
                    "type": "checkbox",
                    "label": "Show Hidden Files",
                    "trueSubstitution": "--all",
                    "falseSubstitution": ""
                }
            ]
        },
        "selector": {
            "output": "list",
            "mode": "static",
            "command": "echo {{ .params.selection }}",
            "placeholder": "Select an item",
            "params": [
                {
                    "id": "selection",
                    "title": "Start directory",
                    "type": "dropdown",
                    "data": [
                        {
                            "title": "foo",
                            "value": "foo"
                        },
                        {
                            "title": "bar",
                            "value": "bar"
                        },
                        {
                            "title": "baz",
                            "value": "baz"
                        }
                    ],
                    "required": true
                }
            ]
        }
    }
}
